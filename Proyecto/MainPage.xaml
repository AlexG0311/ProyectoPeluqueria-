<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto.MainPage"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">
    <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="20" Spacing="30">
        <!-- Imagen de fondo en la parte superior -->
        <Image Source="resources/images/logodonjuan.jpg" Aspect="AspectFit" Opacity="0.8"
               HorizontalOptions="Center" VerticalOptions="Start"/>

        <!-- Título de bienvenida -->
        <Label Text="BIENVENIDO" FontSize="24" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center"/>

        <!-- Botones de inicio de sesión y registro -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
            <Button Text="Log in" Clicked="OnLoginClicked" BackgroundColor="LightGray" TextColor="Black" WidthRequest="100"/>
            <Button Text="Sign up" Clicked="OnSignUpClicked" BackgroundColor="LightGray" TextColor="Black" WidthRequest="100"/>
        </StackLayout>
    </StackLayout>
    </ContentPage>


